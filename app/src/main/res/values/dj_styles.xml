<resources>


    <!-- Base application theme. -->
    <!--<style name="DJAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="DJAppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#5ff</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DJAppTheme.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DJAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DJAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="sub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#2000</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:textSize">12dp</item>
    </style>
</resources>
